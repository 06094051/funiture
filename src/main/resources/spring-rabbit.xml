<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/rabbit
		http://www.springframework.org/schema/rabbit/spring-rabbit-1.4.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath*:rabbit.properties"/>

    <rabbit:connection-factory id="providerConnectionFactory"
                               host="${rabbit.host}"
                               port="${rabbit.port}"
                               username="${rabbit.username}"
                               password="${rabbit.password}"
                               virtual-host="${rabbit.vhost}"
                               connection-timeout="20000"
                               channel-cache-size="15"/>

    <rabbit:connection-factory id="rabbitConsumerFactory"
                               host="${rabbit.host}"
                               port="${rabbit.port}"
                               username="${rabbit.username}"
                               password="${rabbit.password}"
                               virtual-host="${rabbit.vhost}"
                               connection-timeout="20000"
                               channel-cache-size="25"/>

    <rabbit:admin connection-factory="rabbitConsumerFactory" id="amqpConsumerAdmin"/>

    <rabbit:template id="testRabbitTemplate" encoding="UTF-8" connection-factory="providerConnectionFactory"
                     exchange="/testEx"/>

</beans>